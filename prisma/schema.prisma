generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ArtCategory {
  PAINTING
  SCULPTURE 
  DESIGN
  PHOTOGRAPHY
}

model School {
  id          String      @id
  name        String  
  city        String
}

model Artwork {
  id          String      @id @default(cuid())
  title       String
  school      String
  category    ArtCategory
  imageUrl    String      
  tags        String[]    
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  userId      String      
}
